<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="TenMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/bg_login"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="156dp"
            android:layout_height="74dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@drawable/picture1" />
        <!--
        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="Enter a name" />-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="How likely is it that you would recommended NORITAKE  to friend and family? " />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:baselineAligned="false"
            android:numStars="10"
            android:rating="0"
            android:stepSize="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="232dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:text=" Not at all likely" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="266dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="Extremely Likely"
                android:textAlignment="textEnd"
                tools:ignore="RtlCompat" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="513dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="Rating"
            android:visibility="gone"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <Button
            android:id="@+id/buttonSave"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:text="Next" />

    </LinearLayout>

    <ListView
        android:id="@+id/listViewNames"
        android:layout_width="wrap_content"
        android:layout_height="101dp"
        android:visibility="gone"></ListView>



</RelativeLayout>
